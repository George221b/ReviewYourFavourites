@model ComicCreateEditDeleteViewModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-area="@WebConstants.ReviewArea" asp-controller="Comics" asp-action="Destroy" method="post">
            <h3>Delete your comic here: @ViewData["id"]</h3>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Title"></label>
                <input asp-for="@Model.Title" class="form-control" value="@Model.Title" disabled="disabled" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Content"></label>
                <textarea asp-for="@Model.Content" disabled="disabled">@Model.Content</textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Rating"></label>
                <input asp-for="@Model.Rating" class="form-control" value="@Model.Rating" disabled="disabled" />
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Writer"></label>
                <input asp-for="@Model.Writer" class="form-control" value="@Model.Writer" disabled="disabled" />
                <span asp-validation-for="@Model.Writer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Price"></label>
                <input disabled="disabled" asp-for="@Model.Price" class="form-control" value="@Model.Price" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ReleaseDate"></label>
                <input asp-for="@Model.ReleaseDate" disabled="disabled" class="form-control" value="@Model.ReleaseDate" />
                <span asp-validation-for="@Model.ReleaseDate" class="text-danger"></span>
            </div>

            <input hidden="hidden" type="number" name="id" value="@ViewData["id"]" />

            <button type="submit" class="btn btn-danger">DELETE review!</button>
        </form>
    </div>
</div>

<script>
    CKEDITOR.replace('Content');
</script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}