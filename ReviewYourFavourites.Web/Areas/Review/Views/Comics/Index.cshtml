@model List<ListAllReviewsServiceModel>
@{
    ViewData["Title"] = "Index";
}

<h2>All reviews for section Comics: </h2>

<div class="container">
    <div class="card-deck">
        @for (int i = 0; i < this.Model.Count; i++)
        {
            if (i % 3 == 2)
            {
                <div class="row">@Html.Partial("_ListReviewPartial", this.Model[i])</div>
            }
            else
            {
                @Html.Partial("_ListReviewPartial", this.Model[i])
            }
        }
    </div>
</div>

