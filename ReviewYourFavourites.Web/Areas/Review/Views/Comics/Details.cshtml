@model DetailsComicServiceModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@Model.Title</h1>

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <img class="img-fluid img-thumbnail card-img-top imageCustom" src="@Model.Poster.ToImgSrc()" alt="@Model.Title">
        </div>
        <div class="col-md-10 pull-left">
            @Html.Raw(Model.Content)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <h3>Comic Information:</h3>
            Price: @Model.Price, Released On: @Model.ReleaseDate.ToShortDateString()
            Author: @Model.Writer
        </div>
        <div class="col-md-6 text-center">
            <h3>Author of the review information:</h3>
            Review written by: @Model.AuthorUsername, @Model.PublishedOn.ToShortDateString()
            Rated: @Model.Rating
            Views: @Model.Views
        </div>
    </div>
</div>

