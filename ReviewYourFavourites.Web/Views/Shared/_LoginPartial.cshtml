@using Microsoft.AspNetCore.Identity
@using ReviewYourFavourites.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    Hello @UserManager.GetUserName(User)
                    @if (User.IsInRole(WebConstants.ProUserRole))
                    {
                        <img src="~/images/proUser.jpg" alt="PRO" width="25px"/>
                    }!
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="dropdown navbar-right customDropdown">
        <button class="btn dropdown-toggle comicMenu" type="button" data-toggle="dropdown">
            Comics
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a asp-area="Review" asp-controller="Comics" asp-action="Create">Write Review</a></li>
            <li><a asp-area="Review" asp-controller="Comics" asp-action="Index">All Comic Reviews</a></li>
        </ul>
    </div>

    <div class="dropdown navbar-right customDropdown">
        <button class="btn dropdown-toggle movieReview" type="button" data-toggle="dropdown">
            Movies
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a asp-area="Review" asp-controller="Movies" asp-action="Create">Write Review TODO</a></li>
            <li><a asp-area="Review" asp-controller="Movies" asp-action="Index">All Movie Reviews TODO</a></li>
        </ul>
    </div>

    <div class="dropdown navbar-right customDropdown">
        <button class="btn dropdown-toggle bookReview" type="button" data-toggle="dropdown">
            Books
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a asp-area="Review" asp-controller="Books" asp-action="Create">Write Review TODO</a></li>
            <li><a asp-area="Review" asp-controller="Books" asp-action="Index">All Movie Reviews TODO</a></li>
        </ul>
    </div>
}
